<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CameraTheme" parent="AppTheme">
        <item name="android:windowTitleSize">0dp</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Set this to avoid overdraw if HVTView is full screen -->
        <item name="android:windowBackground">@null</item>

        <!-- HorizonSDK tap to focus customization-->
        <item name="hvt_focus_circle_primary">@android:color/holo_blue_dark</item>
        <item name="hvt_focus_circle_secondary">@android:color/white</item>
        <item name="hvt_focus_rect_init_stroke_width">2dp</item>
        <item name="hvt_focus_rect_success_stroke_width">3dp</item>
    </style>

</resources>
